<Window x:Class="cine3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cine3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Benvingut al Cinema Gavà" FontSize="24" Margin="10" HorizontalAlignment="Center"/>

        <TextBlock Text="Correu Electrònic:" Margin="10,102,10,0" VerticalAlignment="Top" />
        <TextBox x:Name="tb_email"  Margin="10,64,10,190" Height="30" />

        <TextBlock Text="Contrasenya:" Margin="10,204,10,0" VerticalAlignment="Top" />
        <PasswordBox x:Name="tb_password" Margin="10,156,10,98" Height="30" />

        <Button x:Name="btIniciarSesion" Content="Iniciar Sessió" Margin="10,250,10,120" Height="30" Click="LoginButton_Click"/>
        <Button x:Name="btInfoPrograma" Content="Informació del programa" Margin="10,315,10,67" Height="30" Click="btInfoPrograma_Click"/>
    </Grid>

</Window>
